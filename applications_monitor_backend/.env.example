# Database Configuration (REQUIRED)
MONGODB_URI=your_mongodb_connection_string_here

# Server Configuration
PORT=8086
NODE_ENV=development

# JWT Configuration (REQUIRED)
JWT_SECRET=your_super_secret_jwt_key_here

# CORS Configuration (REQUIRED)
CORS_ORIGIN=your_frontend_url_here

# Job card reminder (optional): Discord webhook URL. Cron runs at 11:30 PM IST daily; sends a message per client who has >0 jobs in "saved".
# DISCORD_JOBCARD_REMINDER=https://discord.com/api/webhooks/...

# Zero saved jobs reminder (optional): Discord webhook URL. Cron runs at 1 PM IST daily; sends a message per active and unpaused client who has 0 jobs in "saved".
# DISCORD_ZERO_SAVED=https://discord.com/api/webhooks/...

# SendGrid (optional - for OTP login emails)
# SENDGRID_API_KEY_1=your_sendgrid_api_key
# SENDGRID_FROM_EMAIL=noreply@flashfirehq.com
# SENDGRID_FROM_NAME=FlashFire Dashboard

# R2 Storage (optional - for onboarding attachments; set USE_R2_FOR_NEW_UPLOADS=true to use R2)
# USE_R2_FOR_NEW_UPLOADS=true
# R2_ENDPOINT=https://xxx.r2.cloudflarestorage.com/test
# R2_ACCESS_KEY_ID=your_r2_access_key
# R2_SECRET_ACCESS_KEY=your_r2_secret_key
# R2_BUCKET_NAME=test
# R2_PUBLIC_URL=https://pub-xxx.r2.dev/test
